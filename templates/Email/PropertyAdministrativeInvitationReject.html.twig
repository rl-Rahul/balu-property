{% extends 'BaseEmail.html.twig' %}
{% set __default = locale ? locale : 'en' %}
{% block subject %}
    {% autoescape false %}
        {{ 'hello' |trans({}, 'messages', __default ) }}
        {{ userFirstName }} {{ userLastName }},
        <br><br>
    {% endautoescape %}
{% endblock %}
{% block content %}
    {% autoescape false %}
        {% if reject == 'prop' %}
            {{ 'propAdminReject' |trans({}, 'messages', __default ) }}<br>
            {{ 'username' |trans({}, 'messages', __default ) }}: {{ name }}
        {% else %}
            {{ 'propJanitorReject' |trans({}, 'messages', __default ) }}<br>
            {{ 'username' |trans({}, 'messages', __default ) }}: {{ name }}
        {% endif %}
        <br><br/>
        {{ 'bestRegards' |trans({}, 'messages', __default ) }},<br>
        {{ 'baluTeam' |trans({}, 'messages', __default ) }}
    {% endautoescape %}
{% endblock %}