{% extends 'BaseEmail.html.twig' %}
{% set __default = locale ? locale : 'en' %}
{% block subject %}
    {% autoescape false %}
        {{ 'hello' |trans({}, 'messages', __default ) }}
        {{ userIdentity.firstName }} {{ userIdentity.lastName }},
        <br><br>
    {% endautoescape %}
{% endblock %}
{% block content %}
    {% autoescape false %}
        {{ 'thankYouForYourInterest' |trans({}, 'messages', __default ) }} <br>
        {{ 'enterCode' |trans({}, 'messages', __default ) }}
        <strong>{{ userIdentity.authCode }}</strong>
        {{ 'toValidateAccount' |trans({}, 'messages', __default ) }} <br><br><br>
        {{ 'bestRegards' |trans({}, 'messages', __default ) }},<br>
        {{ 'baluTeam' |trans({}, 'messages', __default ) }}
    {% endautoescape %}
{% endblock %}
